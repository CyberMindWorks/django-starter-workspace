{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django",
      "type": "debugpy",
      "request": "launch",
      "program": "${WORKSPACE_DIR}/manage.py",
      "args": ["runserver", "0.0.0.0:3000"],
      "django": true,
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "/config/myproject:/opt/venv/bin"
      },
      "python": "/opt/venv/bin/python"
    }
  ]
}
